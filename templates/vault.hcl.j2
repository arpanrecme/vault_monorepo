ui = true

default_lease_ttl = "768h"

disable_clustering = true

disable_mlock = true

listener "tcp" {
  address = "0.0.0.0:{{ vault_mono_global_config["VAULT_ADDR_PORT"] }}"
  tls_disable = false
  tls_cert_file = "{{ vault_mono_tls_vault_tls_cert_file }}"
  tls_key_file  = "{{ vault_mono_tls_vault_tls_key_file }}"
  tls_require_and_verify_client_cert = true
  tls_client_ca_file = "{{ vault_mono_tls_vault_tls_client_ca_file }}"
}

log_level = "trace"

max_lease_ttl = "768h"

storage "file" {
  path = "{{ vault_mono_data_dir_path }}"
}
